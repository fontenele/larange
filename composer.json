{
	"name": "fontenele/larange",
	"description": "Laravel + PHP + RequireJS + Angular + Bootstrap",
	"keywords": ["framework", "laravel", "requirejs", "require", "angular", "bootstrap"],
	"license": "MIT",
	"type": "project",
	"require": {
		"php": ">=5.5.9",
		"laravel/framework": "5.1",
		"barryvdh/laravel-ide-helper": "~2.0",
		"laracasts/flash": "~1.3",
		"lucadegasperi/oauth2-server-laravel": "4.0.x@dev"
	},
	"require-dev": {
		"fzaninotto/faker": "~1.4",
		"mockery/mockery": "0.9.*",
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"mkdir bootstrap/cache",
			"chmod -Rf 777 bootstrap/cache",
			"chmod -Rf 777 storage/",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate",
			"php artisan vendor:publish",
			"bower install --config.interactive=false",
			"#",
			"#",
			"#",
			"##### NOW YOU CAN TO CONFIGURE YOUR DATABASE AND RUN: $ php artisan init-db"
		]
	}
}
